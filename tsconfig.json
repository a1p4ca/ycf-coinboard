{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "types/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
